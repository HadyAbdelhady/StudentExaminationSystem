@model (GetCoursesInTrack Course, int TrackId)

@{
    ViewData["Title"] = "Edit Course";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card mb-4">
                <div class="card-body p-4">
                    <h1 class="card-title text-center mb-4">Edit Course</h1>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Course.Id" />
                        <input type="hidden" name="TrackId" value="@Model.TrackId" />

                        <div class="form-group">
                            <label for="Name">Course Name</label>
                            <input name="Name" id="Name" class="form-control" value="@Model.Course.Name" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Course.CreationDate"></label>
                            <input asp-for="Course.CreationDate" type="date" class="form-control" required />
                        </div>



                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-block">
                                Save
                            </button>

                            <a asp-action="Details" asp-route-id="@Model.Course.Id" asp-route-trackId="@Model.TrackId" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #F0ECE5;
        min-height: 100vh;
        /*padding: 20px;*/
        font-family: "lora", serif;
    }

    .card {
        margin-top: 50px;
        border: none;
        border-radius: 15px;
        background-color: rgba(255, 255, 255, 0.95);
        transition: all 0.3s ease;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        }

    .form-control {
        /* border: 2px solid #161A30; */
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #31304D;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
        }

    .btn-primary {
        background: linear-gradient(135deg, #161A30 0%, #31304D 100%);
        border: none;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
        font-weight: 600;
        font-size: 20px;
    }

    .btn-secondary {
        padding: 0.8rem 1.5rem;
    }

        .btn-primary:hover, .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px #31304D;
        }

    label {
        font-weight: 600;
    }

    textarea {
        resize: none;
        overflow: auto;
    }



    /* Footer Styles */
    .footer {
        /* background-color: rgba(255, 255, 255, 0.95); */
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        color: #2d1744;
        font-size: 14px;
        padding: 20px 0;
        margin-top: auto; /* Ensures footer sticks to the bottom */
    }

        .footer a {
            color: #31304D;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer a:hover {
                color: #4c51bf;
            }

        .footer .list-inline-item:not(:last-child) {
            margin-right: 15px;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

