@model List<GetExamModel>
<div>.
    <h1>Exam Models</h1>
</div>
<table class="table table-striped table-hover text-center">
    <thead>
        <th>Id</th>
        <th>Creation Date</th>
        <th>Examination Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Course Name</th>
        <th>Instructor Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @foreach(var examModel in @Model)
        {
            @if(examModel != null){
                <tr>
                    <td>@examModel.Id</td>
                    <td>@examModel.CreationDate?.ToString("MM/dd/yyyy")</td>
                    <td>@examModel.Date</td>
                    <td>@examModel.StartTime</td>
                    <td>@examModel.EndTime</td>
                    <td><span class="badge text-bg-primary">@examModel.courseName</span></td>
                    <td><p><a href="#" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">@examModel.firstName @examModel.lastName</a></p></td>
                    <td><a class="btn btn-warning" asp-controller="ExamModel" asp-action="Index" asp-route-id="@examModel.Id">Details</a></td>
                </tr>
            }
        }
    </tbody>
</table>